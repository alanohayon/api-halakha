# ============================================================================
# CONFIGURATION HALAKHA API - VARIABLES D'ENVIRONNEMENT
# ============================================================================

# ============================================================================
# SUPABASE CONFIGURATION (OBLIGATOIRE)
# ============================================================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/halakha

# ============================================================================
# S3 STORAGE CONFIGURATION (OPTIONNEL)
# ============================================================================
ENDPOINT_S3=https://your-project-id.supabase.co/storage/v1/s3
REGION_S3=us-east-1
KEY_STORE_IMAGE=your_s3_access_key

# ============================================================================
# OPENAI CONFIGURATION (OBLIGATOIRE)
# ============================================================================
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_ORGANIZATION_ID=org-your_organization_id
OPENAI_PROJECT_ID=proj-your_project_id
OPENAI_PROJECT_AI=proj-your_ai_project_id

# Assistant IDs OpenAI
ASST_HALAKHA=asst-your_halakha_assistant_id
ASST_PROMPT_DALLE=asst-your_dalle_assistant_id
ASST_INSTA_POST=asst-your_instagram_assistant_id
ASST_LEGEND_POST=asst-your_legend_assistant_id

# ============================================================================
# NOTION CONFIGURATION (OBLIGATOIRE)
# ============================================================================
NOTION_API_TOKEN=secret_your_notion_api_token
NOTION_DATABASE_ID_POST_HALAKHA=your_notion_database_id

# ============================================================================
# API CONFIGURATION
# ============================================================================
APP_NAME=Halakha API
DEBUG=false
HOST=0.0.0.0
PORT=8000

# ============================================================================
# CORS CONFIGURATION (SÉCURISÉ)
# ============================================================================
# ⚠️  IMPORTANT: Ne jamais utiliser "*" en production
BACKEND_CORS_ORIGINS=["https://yourdomain.com","https://app.yourdomain.com"]

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# RATE LIMITING CONFIGURATION
# ============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# ============================================================================
# SECURITY CONFIGURATION (OBLIGATOIRE EN PRODUCTION)
# ============================================================================
# ⚠️  CRITIQUE: Changez ces clés en production
SECRET_KEY=your-super-secret-key-minimum-32-characters-long
API_KEY=your-api-key-for-authentication-minimum-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# TIMEOUTS CONFIGURATION (PRODUCTION OPTIMIZED)
# ============================================================================
OPENAI_TIMEOUT=300
NOTION_TIMEOUT=60
SUPABASE_TIMEOUT=30
REQUEST_TIMEOUT=120

# ============================================================================
# CACHE CONFIGURATION (OPTIONNEL)
# ============================================================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# ============================================================================
# ENVIRONMENT
# ============================================================================
ENVIRONMENT=production