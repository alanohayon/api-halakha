# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/halakha

# ============================================================================
# OPENAI CONFIGURATION
# ============================================================================
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORGANIZATION_ID=your-org-id
OPENAI_PROJECT_ID=your-project-id
OPENAI_PROJECT_AI=your-project-ai-id

# Assistant IDs
ASST_HALAKHA=asst_your_halakha_assistant_id
ASST_PROMPT_DALLE=asst_your_dalle_assistant_id
ASST_INSTA_POST=asst_your_insta_assistant_id
ASST_LEGEND_POST=asst_your_legend_assistant_id

# ============================================================================
# NOTION CONFIGURATION
# ============================================================================
NOTION_API_TOKEN=your-notion-api-token
NOTION_DATABASE_ID_POST_HALAKHA=your-notion-database-id

# ============================================================================
# API CONFIGURATION
# ============================================================================
APP_NAME=Halakha API
DEBUG=true
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# ============================================================================
# SECURITY
# ============================================================================
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# CACHE
# ============================================================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600